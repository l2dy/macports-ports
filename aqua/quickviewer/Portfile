# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           qmake5 1.0

github.setup        kanryu quickviewer 1.1.6 v
categories          aqua graphics
platforms           darwin
license             GPL-3
maintainers         {l2dy @l2dy} openmaintainer
description         A image/comic viewer application
long_description    ${description}
homepage            https://kanryu.github.io/quickviewer/

fetch.type          git

pre-fetch {
    if {${os.platform} eq "darwin" && ${os.major} < 15} {
        ui_error "${name} @${version} requires OS X 10.11 or later."
        return -code error "incompatible OS X version"
    }
}

patchfiles          patch-p7zip.diff

post-fetch {
    system -W ${worksrcpath} "git submodule update --init"
}
